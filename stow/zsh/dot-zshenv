export ZINIT[MAN_DIR]=${HOME}/run/man
export ZINIT[COMPLETIONS_DIR]=${HOME}/run/share/zsh-completions
export ZINIT[ZCOMPDUMP_PATH]=${HOME}/.cache/zcompdump.${HOST}
export ZINIT[NO_ALIASES]=1
export ZINIT[OPTIMIZE_OUT_DISK_ACCESSES]=1
