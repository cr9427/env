# recommended by https://zdharma-continuum.github.io/zinit/wiki/Example-Oh-My-Zsh-setup/
#
setopt promptsubst

zinit ice lucid depth=1 atload'source ${HOME}/.p10k.zsh; _p9k_precmd' nocd id-as
zinit light romkatv/powerlevel10k


# Turbo load plugins
zinit wait lucid id-as load for \
    zdharma-continuum/zinit-annex-bin-gem-node \
    zdharma-continuum/zinit-annex-patch-dl \
    MichaelAquilina/zsh-you-should-use \
    Aloxaf/fzf-tab \
  atload"!_zsh_autosuggest_start" \
    zsh-users/zsh-autosuggestions \
  atinit"ZINIT[COMPINIT_OPTS]=-C; zicompinit; zicdreplay" \
    zsh-users/zsh-syntax-highlighting \
  blockf atpull'zinit creinstall -q .' \
    zsh-users/zsh-completions \
  src"fzf-git.sh" \
    junegunn/fzf-git.sh.git

#zinit light zsh-users/zsh-history-substring-search
#zinit ice lucid atload'_history_substring_search_config'

zinit ice wait lucid from"gh-r" id-as"fzf-$OS" cp"fzf -> ${HOME}/run/${OS}/bin"
zinit light junegunn/fzf

zinit ice wait lucid from"gh-r" id-as"fd-$OS" mv"fd* -> fd" cp"fd/fd -> ${HOME}/run/${OS}/bin"
zinit light sharkdp/fd

zinit ice wait lucid from"gh-r" id-as"bat-$OS" mv"bat* -> bat" cp"bat/bat -> ${HOME}/run/${OS}/bin"
zinit light sharkdp/bat

zinit ice wait lucid from"gh-r" id-as"zoxide-$OS" cp"zoxide -> ${HOME}/run/${OS}/bin"
zinit light ajeetdsouza/zoxide

