source ~/env/zsh/login.zsh
source ~/env/zsh/updateLists.zsh
source ~/env/zsh/PATH.zsh

# Set the directory we want to store zinit and plugins
#
declare -A ZINIT
export ZINIT[HOME_DIR]=~/.zinit
export ZINIT[BIN_DIR]=~/.zinit/bin
export ZINIT[PLUGINS_DIR]=~/.zinit/plugins
export ZINIT[COMPLETIONS_DIR]=~/.zinit/completions
export ZINIT[SNIPPETS_DIR]=~/.zinit/snippets
export ZINIT[ZCOMPDUMP_PATH]=${HOME}/.cache/zcompdump.${HOST}}
